<!DOCTYPE html>

<%- include partials/_header %>

<div class="hero-body">
  <div class="container has-text-centered">
    <div class="column is-4 is-offset-4">
      <h3 class="title">#update</h3>
      <div class="box">
        <figure class="avatar">
          <img src="./assets/img/darkvador.png" />
        </figure>
        <form id="mForm" method="PUT" action="/update-user" enctype="application/json">
          <div class="field">
            <label class="label has-text-left"><%= user.fullname %></label>
            <div class="control">
              <input class="input is-large" type="text" autofocus="" />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label class="label has-text-left"><%= user.id %></label>
              <input class="input is-large" type="number" />
            </div>
          </div>
          <a class="button is-block is-info is-large is-warning" onclick="document.getElementById('mForm').submit();" >Update the user <%= user.id %></a>
        </form>
      </div>
      <a href="/list">Go To Listing</a>
    </div>
  </div>
</div>

<%- include partials/_footer %>
